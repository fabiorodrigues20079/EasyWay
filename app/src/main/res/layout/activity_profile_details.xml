<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDetailsActivity"
    android:orientation="vertical">

    <include android:id="@+id/profile_actionBar" layout= "@layout/action_bar"></include>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_profile_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#add8ef"
        app:cardMaxElevation="12dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="35dp"
                android:src="@drawable/user"
                ></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: Adolfo Dias"
                    android:textSize="18sp"
                    android:textColor="@color/black"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: a1234@alunos.ipca.pt"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    >

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number: 1234"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"


            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="bottom"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layoutDirection="rtl">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_baseline_home_24"
                android:gravity="right"></ImageView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>