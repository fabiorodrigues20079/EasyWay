<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketBagActivity">
    <include layout="@layout/action_bar" android:id="@+id/ticket_bag_action_bar"></include>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ticket_bag_action_bar"
        android:id="@+id/ticketBag_ticketBagEntries_rv"
        android:layout_marginTop="50dp"
        tools:listitem="@layout/ticket_bag_entry_card">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>