<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"

    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="#fffffc"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticketBag_studentId_tv"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:text="Student Id: 123"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ticketBag_ticketId_tv"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:text="Ticket Id: 123"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"


            >
            <EditText
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_border2"
                android:hint="Insert an student number"
                android:id="@+id/ticketBag_toStudentNumber_et"
                android:textColorHint="#777777"
                android:textAlignment="center">
            </EditText>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ticketBag_refund_button"
                android:text="Refund"
                android:backgroundTint="#addfe6"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                >


            </Button>
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>