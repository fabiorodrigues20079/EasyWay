<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BalanceActivity"
    android:background="@color/white"
    >

    <include android:id="@+id/profile_actionBar" layout= "@layout/action_bar"></include>

    <LinearLayout
        android:id="@+id/firts_balance_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:circularflow_defaultRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_actionBar"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Cash"
            android:textColor="#043A54"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_balance_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/_300"
            android:textColor="#032F3D"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transaction_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_balance_cash"
            tools:listitem="@layout/transaction_card"

            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>